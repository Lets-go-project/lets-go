<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
                "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.letsGo.dao.mybatis.mapper.RecordMapper">

    <insert id="addRecord" parameterType="com.example.letsGo.model.Record">
        INSERT INTO record (date, pool_name, time, distance, user_id)
        VALUES (#{date}, #{poolName}, #{time}, #{distance}, #{userId})
    </insert>

    <update id="updateRecord" parameterType="com.example.letsGo.model.Record">
        UPDATE record
        SET date = #{date}, pool_name = #{poolName}, time = #{time}, distance = #{distance}
        WHERE id = #{id}
    </update>

    <delete id="deleteRecord" parameterType="int">
        DELETE FROM record WHERE id = #{recordId}
    </delete>

    <select id="getRecord" parameterType="int" resultType="com.example.letsGo.model.Record">
        SELECT * FROM record WHERE id = #{recordId}
    </select>

    <select id="getAllRecords" parameterType="int" resultType="com.example.letsGo.model.Record">
        SELECT * FROM record WHERE user_id = #{userId}
    </select>

</mapper>